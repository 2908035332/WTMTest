@model MyTest.ViewModel.other.StuTableVMs.StuTableVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Two">
        <wt:textbox field="Entity.StuName" placeholder="请输入学生姓名" />
        <wt:radio field="Entity.Sex" default-value="1" padding-text="请选择性别" />
        <wt:datetime field="Entity.BirthDate" placeholder="出生日期" />
        <wt:upload field="Entity.PhotoId" />
    </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
